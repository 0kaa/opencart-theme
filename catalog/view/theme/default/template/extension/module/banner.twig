<div class="navs-owl">
  <div class="owl-carousel owl-theme banner-swiper">
	{% for banner in banners %}
		<div class="item">
			{% if banner.link %}
				<a href="{{ banner.link }}">
					<img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-fluid"/>
				</a>
			{% else %}
				<img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-fluid"/>
			{% endif %}
		</div>
	{% endfor %}
</div>
</div>
<script type="text/javascript"><!--
$(".banner-swiper").owlCarousel({
        loop: false,
        nav: true,
        margin:20,
        dots: false,
        autoplay: true,
        autoplayTimeout: 5000,
        autoplayHoverPause: true,
        responsive: {
            0: {
                items: 2
            }
        }
    });

--></script>
