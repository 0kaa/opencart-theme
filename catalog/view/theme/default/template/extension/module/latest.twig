<div class="latest">
	<div class="container">
		<div class="heading mb-4 text-center">
			<h3 class="section-title">{{ heading_title }}</h3>
			<p class="section-desc">{{description}}</p>
		</div>
		<div class="row">
			{% for product in products %}
				<div class="col-lg-3 col-md-4 col-6">
					<div id="product-{{product.product_id}}" class="product-layout ">
						<div class="product-thumb">
							<div class="image">
								<a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive"/></a>
							</div>
						</div>
						<div class="product-meta">
							<a class="product-manufacturer" href="{{ product.manufacturer_href }}">{{ product.manufacturer }}</a>
							<h4 class="product-title">
								<a href="{{ product.href }}">{{ product.name }}</a>
							</h4>
							{% if product.price %}
								<p class="price">
									{% if not product.special %}
										<span>{{ product.price }}</span>
									{% else %}
										<span class="price-new">{{ product.special }}</span>
										<span class="price-old">{{ product.price }}</span>
									{% endif %}
								</p>
							{% endif %}

							<div class="button-group">
								<button class="add-to-cart" type="button" onclick="cart.add('{{ product.product_id }}');"><i class="fa fa-shopping-basket"></i></button>
							</div>
						</div>
					</div>

				</div>
			{% endfor %}
		</div>
	</div>
</div>
